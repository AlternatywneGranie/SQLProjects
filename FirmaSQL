CREATE TABLE FIRMA (ID_PRACOWNIKA INT PRIMARY KEY,IMIE
VARCHAR(20),NAZWISKO VARCHAR(60),STANOWISKO VARCHAR(40),ZAROBEK
INT,DZIAL VARCHAR(30));

INSERT INTO
FIRMA(ID_PRACOWNIKA,IMIE,NAZWISKO,STANOWISKO,ZAROBEK)VALUES(7369,'
MARCIN','SMITKO','URZEDNIK',800);

ALTER TABLE FIRMA ADD MIASTO VARCHAR(30)DEFAULT
'KATOWICE';

UPDATE FIRMA SET DZIAL ='KADRY' WHERE ID_PRACOWNIKA=7369;

ALTER TABLE FIRMA RENAME COLUMN MIASTO TO LOKALIZACJA;

ALTER TABLE FIRMA MODIFY ZAROBEK FLOAT;

ALTER TABLE FIRMA DROP (LOKALIZACJA, DZIAL);

ALTER TABLE FIRMA ADD NR_DZIALU INT;

UPDATE FIRMA SET NR_DZIALU = 20 WHERE ID_PRACOWNIKA =7369

CREATE TABLE DZIAL(NR_DZIAL INT PRIMARY KEY, NAZWA_DZIALU
VARCHAR(50),LOKALIZACJA VARCHAR(50));

DELETE FROM FIRMA; //just handle it

ALTER TABLE FIRMA RENAME TO PRACOWNICY;

ALTER TABLE PRACOWNICY ADD CONSTRAINT FK_NR_DZIALU FOREIGN
KEY(NR_DZIALU)REFERENCES DZIAL(NR_DZIALU);

